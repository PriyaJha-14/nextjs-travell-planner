generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id Int @default(autoincrement()) @id
  email String @unique
  password String
  createdAt DateTime @default(now())
}

model User {
  id Int @default(autoincrement()) @id
  email String @unique
  password String
  firstName String
  lastName String
  createdAt DateTime @default(now())
  bookings Bookings[]
}

model Jobs {
  id Int @default(autoincrement()) @id
  url String
  isComplete Boolean @default(false)
  status String @default("active")
  jobType Json
  createdAt DateTime @default(now())
}


model Trips {
  id String @id @unique
  name String
  city String @default("")              // âœ… Add this field
  nights Int @default(0)
  days Int @default(0)
  destinationItinerary Json @default("{}")
  images Json @default("[]")
  inclusions Json @default("[]")
  themes Json @default("[]")
  price Int @default(0)
  destinationDetails Json @default("{}")
  detailedItinerary Json @default("{}")
  description String @default("")
  packageItinerary Json @default("{}")
  scrapedOn DateTime @default(now())
  status String @default("active")
}



model Bookings {
  id Int @default(autoincrement()) @id
  createdAt DateTime @default(now())
  date DateTime
  bookingType String 
  bookingTypeId String 
  userId Int        
  totalAmount Int  
  paymentIntent String @unique
  isCompleted Boolean @default(false)
  user User @relation(fields: [userId], references: [id])
}

model Flights {
  id Int @default(autoincrement()) @id
  name String
  logo String
  from String
  to String
  departureTime String
  arrivalTime String
  duration String
  scrappedOn DateTime @default(now())
 price         Int?     @default(0)
  jobId Int
}


model Hotels {
  id Int @default(autoincrement()) @id
  name String
  image String
  price Int
  jobId Int
  location String
  scrappedOn DateTime @default(now())
}